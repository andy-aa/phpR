{
  "name": "texlab/r",
  "description": "Running R code from PHP",
  "license": "MIT",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.2",
    "phpstan/phpstan": "^0.12.32",
    "vimeo/psalm": "^3.12"
  },
  "autoload": {
    "psr-4": {
      "TexLab\\R\\": "src"
    }
  },
  "scripts": {
    "test": "phpunit --testsuite alltests",
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
    "psalm": "vendor/bin/psalm"
  }
}
